<extension type="plugin" group="system" method="upgrade" version="3.9">
	<name>PLG_SYSTEM_RADICALMICRO_YOOTHEME</name>
	<creationDate>December 2022</creationDate>
	<author>Dmitriy Vasyukov</author>
	<copyright>Copyright (C) 2005 - 2022 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@fictionlabs.ru</authorEmail>
	<authorUrl>https://fictionlabs.ru</authorUrl>
	<version>0.2.5-dev</version>
	<description>PLG_SYSTEM_RADICALMICRO_YOOTHEME_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<namespace path="src">Joomla\Plugin\System\RadicalMicroYootheme</namespace>

	 <!-- Plugin files -->
	<files>
		<folder>language</folder>
		<filename>bootstrap.php</filename>
		<folder>elements</folder>
		<folder>services</folder>
		<folder plugin="radicalmicro_yootheme">src</folder>
	</files>

	<!-- Plugin languages -->
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_radicalmicro_yootheme.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_radicalmicro_yootheme.json</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_radicalmicro_yootheme.sys.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.plg_system_radicalmicro_yootheme.ini</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.plg_system_radicalmicro_yootheme.json</language>
		<language tag="ru-RU">language/ru-RU/ru-RU.plg_system_radicalmicro_yootheme.sys.ini</language>
	</languages>

	<!-- Config parameter -->
	<config>
		<fields name="params">
            <fieldset name="basic" addfieldprefix="Joomla\Plugin\System\RadicalMicro\Field">
                <field type="radicalmicrocheck"
                       name="radicalmicrocheck"
                       label="PLG_RADICALMICRO_CONTENT_PARAM_CHECK"
                />
            </fieldset>
		</fields>
	</config>

</extension>
